<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_16">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineAcMsg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_ac_alarm_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_alarm_para_title"
                android:textColor="@color/color_07c160"
                android:textSize="@dimen/sp_28"
                app:drawableStartCompat="@drawable/svg_battery" />

            <TextView
                android:id="@+id/tv_high_temp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_high_temp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />


            <TextView
                android:id="@+id/tv_high_humidity"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_high_humidity"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_coil_freeze_protection"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_coil_freeze_protection"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_evaporator_temp_sensor_failure"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_evaporator_temp_sensor_failure"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_condenser_temp_sensor_failure"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_condenser_temp_sensor_failure"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_indoor_temp_sensor_failure"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_text_ac_indoor_temp_sensor_failure"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_humidity_sensor_failure"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_humidity_sensor_failure"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_HP_alarm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_HP_alarm"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_HP_lock"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_HP_lock"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_over_voltage_alarm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_over_voltage_alarm"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />

            <TextView
                android:id="@+id/tv_under_voltage_alarm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_ac_under_voltage_alarm"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:drawableEndCompat="@drawable/shape_bg_oval_green" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineAcMsg"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_com_status"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_com_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_com_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_machine_status"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_machine_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_temp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_temp_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_humi"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_humi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_humi_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_compressor"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_compressor"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_compressor_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_heat_status"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_heat_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_heat_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_ac_vol"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/text_ac_msg_ac_vol"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/tv_ac_vol_show"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>


        </LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineAcMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>